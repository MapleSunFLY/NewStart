<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.fly.myview.progressbar.SaleProgressView
        android:id="@+id/spv"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        app:nearOverText="@string/nearOverText"
        app:overText="@string/overText" />

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:max="100"
        android:visibility="gone" />

    <com.fly.myview.progressbar.ArcProgress
        android:id="@+id/arcProgress"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        app:arcProgress="60"
        app:draggingEnabled="true" />

    <com.fly.myview.progressbar.UpdataAPPProgressBar
        android:id="@+id/updata"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        app:updataAPPBarHeight="20dp"
        app:updataAPPMax="100"
        app:updataAPPProgress="50"
        app:updataAPPReachedBarColor="#FF6770"
        app:updataAPPTextColor="@color/color_white"
        app:updataAPPUnreachedBarColor="#EBEBEB" />

    <com.fly.myview.progressbar.StageProgress
        android:id="@+id/stageProgress"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_10"
        app:stageAllStage="4"
        app:stageReachedBarColor="#FF6770"
        app:stageText="7日目标：150-400(min)"
        app:stageTextBackgroundColor="#28ff6770"
        app:stageUnreachedBarBitmap="@drawable/view_progress_lock_ic_selector"
        app:stageUnreachedBarColor="#F6F6F6"
        app:stageUnreachedTextColor="#BABABA" />


    <com.fly.myview.chart.LineChartView
        android:id="@+id/line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#FEF7ED"
        app:lineIntervalColor="#FEF7ED"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10" />
</LinearLayout>