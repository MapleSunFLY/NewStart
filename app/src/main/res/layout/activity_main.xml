<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fly.newstart.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_main_okhttp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="okhttp" />

        <Button
            android:id="@+id/btn_main_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="web" />

        <Button
            android:id="@+id/btn_main_rx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="RX" />

        <Button
            android:id="@+id/btn_main_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="进度条" />

        <Button
            android:id="@+id/btn_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="公告控件" />

        <Button
            android:id="@+id/btn_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="PDF查看" />

        <Button
            android:id="@+id/btn_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="手写签名" />

        <Button
            android:id="@+id/btnScanRode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="扫码" />

        <Button
            android:id="@+id/btnProperty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="动画" />

        <Button
            android:id="@+id/btnGetTxT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="导出TxT" />

        <Button
            android:id="@+id/btnBroadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="蓝牙" />

        <Button
            android:id="@+id/btnPermissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Permissions" />

        <Button
            android:id="@+id/btnNeinterface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="万能接口" />

        <Button
            android:id="@+id/btnIOC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="IOC注入" />

        <Button
            android:id="@+id/btnProxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="代理_网络框架切换" />

        <Button
            android:id="@+id/btnPlugin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="插件化" />

        <Button
            android:id="@+id/btnNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="全局网络监听" />

        <Button
            android:id="@+id/btnCompress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="图片压缩" />

        <Button
            android:id="@+id/btnDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Dialog" />

        <Button
            android:id="@+id/btnLading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="加载封装" />

        <Button
            android:id="@+id/btnSVG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_svg_selector"
            android:drawableTop="@drawable/common_svg_selector"
            android:drawableTint="@color/common_svg_selector"
            android:onClick="onClick"
            android:text="SVG" />


        <Button
            android:id="@+id/btnMyEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_svg_selector"
            android:drawableTop="@drawable/common_svg_selector"
            android:drawableTint="@color/common_svg_selector"
            android:onClick="onClick"
            android:text="My Event" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

</ScrollView>
